    "test": "vitest run"
  },
  "dependencies": {
    "@ciolabs/htmlparser2-source": "workspace:*",
    "cheerio-select": "^2.1.0",
    "escape-html": "^1.0.3",
    "html-entities": "^2.5.2",
    "magic-string": "^0.30.0"
  },
  "devDependencies": {
    "@types/escape-html": "^1.0.0",
    "@types/node": "^20.0.0"
  }
